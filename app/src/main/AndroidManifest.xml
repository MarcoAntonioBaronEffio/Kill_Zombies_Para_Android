<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redsystem.juegodezombies">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_game"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_game_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CambioDePass"></activity>
        <activity android:name=".DetalleJugador" />
        <activity android:name=".Puntajes" />
        <activity android:name=".EscenarioJuego" />
        <activity android:name=".Login" />
        <activity android:name=".Menu" />
        <activity android:name=".Registro" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>